{
    "name": "pwa-project",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "preview": "vite preview",
        "prepare": "husky install",
        "deploy:update": "ssh root@120.53.103.183 \"cd /root/apps/react-template && git pull\"",
        "deploy:build": "ssh root@120.53.103.183 \"cd /root/apps/react-template && docker compose up -d --build\"",
        "deploy:logs": "ssh root@120.53.103.183 \"cd /root/apps/react-template && docker compose logs -f\"",
        "deploy:stop": "ssh root@120.53.103.183 \"cd /root/apps/react-template && docker compose down\"",
        "deploy:restart": "ssh root@120.53.103.183 \"cd /root/apps/react-template && docker compose restart\"",
        "deploy": "pnpm run deploy:update && pnpm run deploy:build"
    },
    "lint-staged": {
        "*.{css,scss,md,json}": [
            "prettier --write"
        ]
    },
    "author": "tech-zjf",
    "dependencies": {
        "axios": "^1.12.2",
        "dayjs": "^1.11.13",
        "immer": "^10.1.1",
        "lodash": "^4.17.21",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-router": "^7.9.4",
        "use-immer": "^0.11.0",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@tailwindcss/postcss": "^4.1.16",
        "@types/lodash": "^4.17.13",
        "@types/node": "^24.6.0",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "@vitejs/plugin-react": "^5.0.4",
        "autoprefixer": "^10.4.21",
        "chalk": "^4.1.1",
        "cross-env": "^7.0.3",
        "esbuild": "^0.24.0",
        "eslint": "^8",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.22",
        "globals": "^16.4.0",
        "husky": "^8.0.1",
        "lint-staged": "^10.0.0",
        "os-locale": "^5.0.0",
        "postcss": "^8.5.6",
        "prettier": "^3.3.3",
        "tailwindcss": "^4.1.16",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "npm:rolldown-vite@7.1.14"
    },
    "pnpm": {
        "overrides": {
            "vite": "npm:rolldown-vite@7.1.14"
        }
    },
    "engines": {
        "node": ">=22.20.0"
    }
}
